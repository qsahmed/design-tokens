{
  "source": ["input/design-tokens.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "output/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "output/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      }]
    }
  }
}
